{% extends 'baseAdmin.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

	<div class="col-lg-8 mx-auto mt-4">
		<div class="card rounded-4 mt-4">
			<div class="card-header rounded-top-4">
				<h3>UTILISATEUR</h3>
			</div>
			<div class="card-body rounded-bottom-4">

<table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>Prénom</th>
                <td>{{ user.usersFirstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.usersLastName }}</td>
            </tr>
            <tr>
                <th>Centre</th>
                <td>{{ user.usersCenter }}</td>
            </tr>
                        <tr>
                <th>Roles</th>
                <td>
                {# <pre>
                    {{ dump(user.roles) }}
                </pre> #}
                    {% if user.roles %}
                        {% if 'ROLE_ADMIN' in user.roles %}
                        Administrateur
                        {% elseif 'ROLE_USER' in user.roles %}
                        Utilisateur
                        {% endif %}
                    {% else %}
                        -
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>

<div class="row ">
					<div class="col-4 d-flex justify-content-around">
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">
						<button type="button" class="btnBlue "><i class="bi bi-pencil-square"></i>
								Editer
						</button></a>
					</div>
					<div class="col-4 d-flex justify-content-around">

						{{ include('user/_delete_form.html.twig') }}
					</div>
					<div class="col-4 d-flex justify-content-around">
						<a href="{{ path('app_user_index') }}">
							<button type="button" class="btnBlue ">

								<i class="bi bi-arrow-return-left"></i>
								Retour à la liste
							</button>
						</a>
					</div>

				</div>

			</div>
		</div>
	</div>
{% endblock %}