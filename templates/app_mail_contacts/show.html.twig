{% extends 'baseAdmin.html.twig' %}

{% block title %}AppMailContacts{% endblock %}

{% block body %}
	<div class="col-lg-8 mx-auto mt-4">
		<div class="card rounded-4 mt-4">
			<div class="card-header rounded-top-4">
				<h3>CONTACT</h3>
			</div>
			<div class="card-body rounded-bottom-4">

				<table class="table">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app_mail_contact.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app_mail_contact.appMailContactsEmail }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ app_mail_contact.appMailContactsFirstName }}</td>
            </tr>
            <tr>
                <th>Nom/th>
                <td>{{ app_mail_contact.appMailContactsLastName }}</td>
            </tr>
            <tr>
                <th>Entreprises</th>
                <td>{{ app_mail_contact.appMailContactsBusiness }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mail_contacts_index') }}" class="icone"  title="Retour à la liste"><i class="bi bi-arrow-return-left"></i></a>

    <a href="{{ path('app_mail_contacts_edit', {'id': app_mail_contact.id}) }}" class="icone"  title="éditer"><i class="bi bi-pencil-square"></i></a>

    {{ include('app_mail_contacts/_delete_form.html.twig') }}
    </div>
    </div>
    </div>
{% endblock %}
